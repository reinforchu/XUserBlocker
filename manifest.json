{
    "description": "X User Blocker for Firefox",
    "manifest_version": 2,
    "name": "XUserBlocker",
    "version": "1.0",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://twitter.com/*"
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      }
  }